- if user_signed_in?
  - unless params[:user_id]
    .row
      .columns.three
        = render :partial => 'standings'
      .columns.nine
        %h2.league_header= "Your week #{@active_week} match-ups"
        %h2.league_header{style: "display: none"}= "All week #{@active_week} match-ups"
        %span.show_all Show all
        %span.show_all{style: "display:none"} Show only you
        %table.match_ups
          %tr
            %th
            %th Away
            %th 
            %th Home
            %th
            %th Date
            %th Time (PT)
          - @this_weeks_games.each do |game|
            %tr.all{:class => ("current_user" if (current_user.starters(params[:id], @active_week).map{|t| t.team_id} & [game.home_team_id, game.away_team_id]).present?)}
              %td
                - if WeeklyActive.league_week(params[:id], @active_week).map{|w| w.team.id}.include?(game.away_team.id)
                  %span.owner
                    = Pick.find_by_league_id_and_team_id(params[:id], game.away_team.id).try(:user).try(:first_name)
              %td
                = game.away_team.full_name
              %td @
              %td
                = game.home_team.full_name
              %td
                - if WeeklyActive.league_week(params[:id], @active_week).map{|w| w.team.id}.include?(game.home_team.id)
                  %span.owner
                    = Pick.find_by_league_id_and_team_id(params[:id], game.home_team.id).try(:user).try(:first_name)
              %td=(game.gametime - 7.hours).strftime("%a") 
              %td=(game.gametime - 7.hours).strftime("%I:%M %p")
  .row
    .columns.six
      = render :partial => 'weeks_overview'
    .columns.six
      - if params[:user_id]
        %h2= "#{User.find(params[:user_id]).first_name}'s teams"
      -else
        %h2 Your teams
      = render :partial => 'picks/list'
      - if @user == current_user && current_user.find_teams(params[:id]).empty?
        = link_to 'Edit Teams', edit_picks_path(params[:id]) unless @user != current_user
      
  
- else
  = link_to 'Sign up', new_user_registration_path
  = link_to 'Login', new_user_session_path